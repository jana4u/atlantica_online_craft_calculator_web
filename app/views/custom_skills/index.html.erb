<div class="craft-calculator">
  <h1>Your skills</h1>

  <p>You can set your own skills here.</p>

  <p>Leave field blank if you want to remove any of your current skills.</p>

  <%= form_tag(custom_skills_path, method: :put, class: "row") do %>
    <%= label_tag(:auto_craft, "Auto-Craft", class: "col-md-2 col-form-label") %>
    <div class="col-md-4">
      <%= number_field_tag(:auto_craft, custom_skills_store.auto_craft, class: "form-control") %>
    </div>

    <div class="col-md-12">
      <%= submit_tag "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
